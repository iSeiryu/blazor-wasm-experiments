@page "/game-of-life"

@using Excubo.Blazor.Canvas
@using Excubo.Blazor.Canvas.Contexts
@using BlazorExperiments.UI.Shared

@inject IJSRuntime JS

<CanvasComponent Id="hexagon"
                 InitializeAsync="InitializeGame"
                 LoopAsync="Loop"
                 HandleMouseUp="HandleMouse"
                 CellSize="CellSize"
                 @ref="_canvas">
</CanvasComponent>

<div class="d-grid">
    <div class="row">
        <div class="flex">
            <label for="lines-count">Refresh every: </label>
            <span>@_milliSeconds ms</span>
        </div>
        <input id="lines-count" type="range" min="16" max="1000" @bind="_milliSeconds" @bind:after="ChangeSpeed" />
    </div>

    <div class="row">
        <p>Generation: @_generation</p>
        <p>Canvas Width: @_canvas?.Width</p>
        <p>Canvas Height: @_canvas?.Height</p>
        <p>Cell Size: @_canvas?.CellSize</p>
        <p>Rows: @_rows</p>
        <p>Columns: @_cols</p>
    </div>
</div>